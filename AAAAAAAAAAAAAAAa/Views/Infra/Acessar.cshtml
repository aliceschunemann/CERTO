@model AAAAAAAAAAAAAAAa.Models.Infra.AcessarViewModel
@{
    Layout = "_LayoutIES";
}

<div class="containerLogin">
    <h5 class="text-center">Login</h5>
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha"></label>
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn botaoLogin" value="Acessar">
        </div>
        <div class="form-group">
            <center><p>
                Não está cadastrado ainda?
                <a asp-action="RegistrarNovoUsuario" asp-route-returnurl="@ViewData["ReturnUrl"]" class="cadastroLink">
                    Cadastre-se aqui!
                </a>
            </p></center>
        </div>
    </form>
</div>