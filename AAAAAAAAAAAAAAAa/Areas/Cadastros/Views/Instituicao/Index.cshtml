@model IEnumerable<Modelo.Cadastros.Instituicao>

@{
    Layout = "_LayoutIES";
}

@await Html.PartialAsync("_StylePartial")


@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="container">
    <nav class="navbar navbar-transparent bg-transparent">
        <div class="container-fluid">
            <h5>Instituições registradas</h5>
            <span class="login">
                <a asp-action="Create" class="btn botaoLogin">Registrar nova instituição</a>
            </span>
        </div>
    </nav>
    <br />
    <div class="container">
        <div class="row">
                <table id="tabela_instituicoes">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.InstituicaoID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Endereco)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InstituicaoID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Endereco)
                                </td>
                                <td>
                                <div class="row">
                                    <div class="col-4">
                                        <a asp-action="Edit" asp-route-id="@item.InstituicaoID" class="btn botaoLogin">Editar</a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="Details" asp-route-id="@item.InstituicaoID" class="btn botaoLogin">Detalhes</a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="Delete" asp-route-id="@item.InstituicaoID" class="btn botaoLogin">Deletar</a>
                                    </div>
                                </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>     
        </div>
    </div>
</div>

@await Html.PartialAsync("_ScriptsPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_instituicoes').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}
