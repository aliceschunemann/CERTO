@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

<div class="container">
    <nav class="navbar navbar-transparent bg-transparent">
        <div class="container-fluid">
            <h5>Exibindo um departamento existente</h5>
        </div>
    </nav>
    <br />
    <div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituicaoID" class="control-label"></label>
                <select asp-for="InstituicaoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Instituicoes, "InstituicaoID", "Nome"))"></select>
            </div>
            <div class="form-group text-center h3">
                <input type="submit" value="Registrar Departamento" class="btn botaoLogin" style="width:30%; margin-top:14px" />
                <a asp-action="Index" class="btn botaoLogin" style="width:30%">Voltar</a>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")